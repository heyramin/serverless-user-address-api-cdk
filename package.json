{
  "name": "serverless-user-address-api-cdk",
  "version": "1.0.0",
  "description": "Serverless User Address API built with AWS CDK",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "cdk:synth": "cdk synth",
    "cdk:diff": "cdk diff",
    "cdk:deploy:dev": "cdk deploy --context environment=dev",
    "cdk:deploy:prod": "cdk deploy --context environment=prod",
    "cdk:destroy": "cdk destroy",
    "test": "jest --testPathIgnorePatterns=integration",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:watch": "jest --watch --testPathIgnorePatterns=integration",
    "test:integration": "jest --testMatch='**/integration/**/*.test.ts'",
    "test:all": "jest",
    "test:bdd": "cucumber-js tests/bdd/features/**/*.feature --require-module ts-node/register --require tests/bdd/steps/**/*.ts",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "aws",
    "cdk",
    "serverless",
    "api",
    "lambda"
  ],
  "author": "heyramin",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^12.4.0",
    "@types/aws-lambda": "^8.10.159",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-cdk": "^2.100.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/lib-dynamodb": "^3.400.0",
    "aws-cdk-lib": "^2.100.0",
    "aws-sdk": "^2.1400.0",
    "constructs": "^10.0.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.0"
  }
}
